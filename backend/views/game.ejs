<html>

<head>
  <%- include('./partials/header', {title: title}); %>
  <style>
    #game-page {
      display: flex;
      justify-content: space-around;
    }

    .boardParent {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 5rem;
    }

		.board {
			display: grid;
			grid-template-columns: repeat(15, 45px);
			grid-template-rows: repeat(15, 45px);
			gap: 2px;
			background-color: #f2f2f2;
			padding: 10px;
		}

		.square {
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 24px;
			font-weight: bold;
			color: #333;
			background-color: #fff;
			border-radius: 4px;
			box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2);
    }
	</style>
</head>

<body>
  <div id="content-wrap">
    <%- include('./partials/navbars/authenticated_navbar', {username: username}); %>
    
    <h1 id="pageTitle">Game <%= gameID %></h1>
    <div id="game-page">
      <div class="boardParent" style="width: 50%">
        <div class="board">
          <% counter = 0 %>
          <% for (let i = 0; i < 15; i++) { %>
            <% for (let j = 0; j < 15; j++) { %>
              <% if (board_obj[counter].letter_multiplier === 2){%>
                <div class="square" style="background-color:lightblue"><%= board_obj[counter].x %>, <%= board_obj[counter].y %></div>
              <% } else if (board_obj[counter].letter_multiplier === 3){ %>
                <div class="square" style="background-color:teal;"><%= board_obj[counter].x %>, <%= board_obj[counter].y %></div>
              <% } else if (board_obj[counter].word_multiplier === 2) {%>
                <div class="square" style="background-color: pink;"><%= board_obj[counter].x %>, <%= board_obj[counter].y %></div>
              <% } else if (board_obj[counter].word_multiplier === 3) {%>
                <div class="square" style="background-color: red;"><%= board_obj[counter].x %>, <%= board_obj[counter].y %></div>
              <% } else {%>
                <div class="square"><%= board_obj[counter].x %>, <%= board_obj[counter].y %></div>
              <% } %>
              <% counter++%>
            <% } %>
          <% } %>
        </div>
      </div>
      <%- include('partials/chat.ejs') %>
    </div>
  </div>
  <div>
    <%- include('./partials/footer'); %>
  </div>
</body>

</html>