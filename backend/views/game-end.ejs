<html>

<head>
  <%- include('./partials/header', {title: title}); %>
  <style>
    .game-end {
      font-size: 25px;
      margin-top: 15%;
      text-align: center;
    }

    .final-scores {
      margin-top: 5%;
      font-size: 25px;
      text-align: center;
    }

    .final-scores-text {
      font-size: 35px;
      margin-bottom: 5px;
    }

    .players {
      display: flex;
      flex-direction: row;
      text-align: center;
      justify-content: center;
      font-size: 50px;
    }

    .players div {
      border: 1px solid black;
    }

    .username, .score {
      padding: 10px;
    }
  </style>
</head>

<body>
  <div id="content-wrap">
    <%- include('./partials/navbars/authenticated_navbar', {username: username, id: id}); %>
    
    <h1 class="page-title">Game <%= gameID %></h1>
    <div class="game-end">Your game has ended. Thanks for playing!</div>

    <div class="final-scores">
      <div class="final-scores-text">Final Scores:</div>
      <%- include('./partials/players-and-scores', { playersAndScores: playersAndScores }); %>
    </div>
  </div>
  <%- include('./partials/footer'); %>
</body>

</html>